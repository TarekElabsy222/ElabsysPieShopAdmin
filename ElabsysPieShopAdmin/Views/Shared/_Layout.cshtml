<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ElabsysPieShop | @ViewData["Title"]</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ElabsysPieShopAdmin.styles.css" asp-append-version="true" />
</head>
<body>

    <div class="container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-dark fixed-top bg-primary"
                 aria-label="Bethany's Pie Shop navigation header">
                <div class="container-xl">
                    <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                        <h3 class="d-inline-block align-top mb-2 mt-1 logo-style">Elabsy's Pie Shop</h3>
                    </a>

                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse"
                            aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" id="navbarCollapse">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   data-toggle="dropdown"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   id="nav-dropdown"
                                   aria-expanded="false">
                                    Pies
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="nav-dropdown">
                                    <li>
                                        <a asp-controller="Pie" asp-action="Index" class="dropdown-item">
                                            View all
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Pie" asp-action="IndexPaging" class="dropdown-item">
                                            View all paged
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Pie" asp-action="IndexPagingSorting" class="dropdown-item">
                                            View all paged and sorted
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Pie" asp-action="Search" class="dropdown-item">
                                            Search pies
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Pie" asp-action="Add" class="dropdown-item">
                                            Add new pie
                                        </a>
                                    </li>
                                </ul>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle"
                                   data-toggle="dropdown"
                                   href="#"
                                   role="button"
                                   data-bs-toggle="dropdown"
                                   id="nav-dropdown"
                                   aria-expanded="false">
                                    Categories
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="nav-dropdown">
                                    <li>
                                        <a asp-controller="Category" asp-action="Index" class="dropdown-item">
                                            View all
                                        </a>
                                    </li>
                                    <li>
                                        <a asp-controller="Category" asp-action="AllEdit" class="dropdown-item">
                                            Edit All Categories
                                        </a>
                                    </li>
                                </ul>
                            </li>


                            <li class="nav-item">
                                <a asp-controller="Order" asp-action="Index" class="nav-link">
                                    Orders
                                </a>
                            </li>
                        </ul>

                    </div>
                </div>
            </nav>
        </header>

        @RenderBody()
        <script>

            $.validator.methods.range = function (value, element, param) {
                var globalizedValue = value.replace(",", ".");
                return this.optional(element) || (globalizedValue >= param[0] && globalizedValue <= param[1]);
            }

            $.validator.methods.number = function (value, element) {
                return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:[\s\.,]\d{3})+)(?:[\.,]\d+)?$/.test(value);
            }
        </script>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
